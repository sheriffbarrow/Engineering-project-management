<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>sandBox</servlet-name>
        <servlet-class>controllers.sandBox</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>projectListServlet</servlet-name>
        <servlet-class>controllers.projectListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createProjectServlet</servlet-name>
        <servlet-class>controllers.createProjectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>taskListServlet</servlet-name>
        <servlet-class>controllers.taskListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createTaskServlet</servlet-name>
        <servlet-class>controllers.createTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sandBox</servlet-name>
        <url-pattern>/sandBox</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>projectListServlet</servlet-name>
        <url-pattern>/projectListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createProjectServlet</servlet-name>
        <url-pattern>/createProjectServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>taskListServlet</servlet-name>
        <url-pattern>/taskListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createTaskServlet</servlet-name>
        <url-pattern>/createTaskServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
